{
  "name": "matchflix",
  "version": "1.0.0",
  "description": "A functional dating app MVP with profile creation, matching, and chat",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:frontend": "npm run dev --workspace=frontend",
    "build": "npm run build --workspace=backend",
    "start": "npm run start --workspace=backend",
    "heroku-postbuild": "cd backend && npx prisma generate && npm run build"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
